<div class='create-room'>
  <h2>Edit a room</h2>

  <form action='/rooms/{{room._id}}' method='post'>
    <label for='name'>Name</label>
    <input type='text' name='name' id='name-input' value='{{room.name}}'/>

    <label for='description'>Description</label>
    <input type='text' name='description' id='description-input' value='{{room.description}}' />

    <label for='imageUrl'>Choose image</label>
    <input type='text' name='imageUrl' id='imageUrl-input' value='{{room.imageUrl}}' />

    <label for='owner'>Owner</label>
    <select name='owner' id='owner-select'>
      <option value='{{room.owner}}' ></option>
      {{#each users}}
        <option value='{{_id}}'>{{fullName}} </option>
      {{/each}}
    </select>

    <button type='submit' class='create-btn'>Save changes</button>
  </form>
</div>