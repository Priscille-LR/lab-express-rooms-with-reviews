<div class='create-room'>
  <h2>Create a new room</h2>

  <form action='/rooms/create' method='post'>
    <label for='name'>Name</label>
    <input type='text' name='name' id='name-input' />

    <label for='description'>Description</label>
    <input type='text' name='description' id='description-input' />

    <label for='imageUrl'>Choose image</label>
    <input type='text' name='imageUrl' id='imageUrl-input' />

    <label for='owner'>Owner</label>
    <select name='owner' id='owner-select'>
      <option disable selected value=''></option>
      {{#each users}}
        <option value='{{_id}}'>{{fullName}} </option>
      {{/each}}
    </select>

    <button type='submit' class='create-btn'>Create room</button>
  </form>
</div>